#!/bin/sh 
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -lsa'


# WSL Clipboard Detection and Alias Setup
if [[ -n "$WSL_DISTRO_NAME" ]] || grep -qi microsoft /proc/version 2>/dev/null; then
    # Set clipboard aliases for WSL
    alias clip='powershell.exe "Get-Clipboard"'
    alias clipset='powershell.exe "Set-Clipboard"'
    
    # Optional: Additional clipboard functions
    clipget() {
        powershell.exe "Get-Clipboard" "$@"
    }
    
    clipput() {
        powershell.exe "Set-Clipboard" -Value "$(cat)"
    }
fi
